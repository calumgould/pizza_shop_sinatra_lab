<div class="edit_form">
  <form method="post" action="/pizza-orders/<%= @order.id %>">
    <label for="first-name">First Name:</label>
      <input id="first-name" class="field" type="text" name="first_name" value="<%= @order.first_name %>">
      <br><br>
    <label for="last-name">Last Name:</label>
      <input id="last-name" class="field" type="text" name="last_name" value="<%= @order.last_name %>">
      <br><br>
    <label for="pizza-select">Select a pizza!</label>
      <select id="pizza-select" name="topping" class="field">
        <option value="<%= @order.topping %>"><%= @order.topping %></option>
        <option value="Margherita">Margherita</option>
        <option value="Calzone">Calzone</option>
      </select>
      <br><br>
    <label for="quantity">Quantity:</label>
      <input id = "quantity" class="field" type="number" name="quantity" value="<%= @order.quantity %>">
      <br>
    <input class="button" type="submit" value="Update Order">
  </form>
</div>
